{
    // https://nuxt.com/docs/guide/concepts/typescript
    "compilerOptions": {
        "target": "ESNext",
        "lib": ["ES2022", "DOM"],
        "resolveJsonModule": true,
        "noImplicitAny": false
    },
    "include": [
        "index.d.ts",
        "./composables/*.ts",
        "~/types/*.ts",
        "./components/*.vue",
        "./pages/*.vue",
        "./plugins/*.ts",
        "./app.vue",
        "./error.vue"
    ],
    "exclude": ["node_modules", "cypress"],
    "extends": "./.nuxt/tsconfig.json"
}
